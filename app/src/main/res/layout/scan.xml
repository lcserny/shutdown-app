<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:id="@+id/scanFragment"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/portView" android:text="@string/proxy_port"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:paddingLeft="16dp" android:paddingRight="16dp" android:width="75dp"
            app:layout_constraintTop_toTopOf="@+id/scanTopGuideView"/>
    <Button
            android:text="@string/scan_button_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/scanView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/portView"
            android:width="200dp" android:height="50dp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/scanTopGuideView"
                                                app:layout_constraintGuide_begin="75dp"
                                                android:orientation="horizontal"/>
</androidx.constraintlayout.widget.ConstraintLayout>