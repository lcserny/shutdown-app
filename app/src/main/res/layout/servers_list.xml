<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/serversFragment"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/shutdownSecondsView" android:gravity="center" android:width="200dp" android:layout_margin="16dp" android:paddingLeft="8dp"
            android:paddingRight="8dp" android:layout_gravity="center" android:text="0"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/serversRecyclerView"/>
</LinearLayout>