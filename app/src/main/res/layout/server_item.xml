<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp" android:id="@+id/serverItemCardView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/serverItemLayoutView">

            <TextView
                    android:text="Some Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/serverIpTextView"
                    app:layout_constraintTop_toTopOf="@+id/serverShutdownGuide"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:paddingLeft="8dp" android:paddingRight="8dp"
                    android:width="200dp" android:gravity="center" android:layout_gravity="center"
                    android:layout_marginTop="16dp"/>
            <Button
                    android:text="@string/shutdown_button_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/serverIShutdownButtonView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/serverIpTextView" android:width="200dp"
                    android:layout_gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>