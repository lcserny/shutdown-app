<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp" android:id="@+id/serverItemCardView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/serverItemLayoutView">

            <TextView
                    android:text="Some Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/serverIpTextView"
                    app:layout_constraintTop_toTopOf="@+id/serverShutdownGuide" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:paddingLeft="8dp" android:paddingRight="8dp"
                    android:width="200dp"/>
            <Button
                    android:text="@string/shutdown_button_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/serverIShutdownButtonView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/serverIpTextView" android:width="200dp"/>
            <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content" android:id="@+id/serverShutdownGuide"
                                                        app:layout_constraintGuide_begin="15dp"
                                                        android:orientation="horizontal"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>