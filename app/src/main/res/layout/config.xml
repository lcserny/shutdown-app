<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:id="@+id/configFragment"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="@string/socket_timeout_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/socketTimeoutLabelView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="@+id/saveTopGuideView"
            android:padding="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/socketTimeoutView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:paddingLeft="16dp" android:paddingRight="16dp" android:width="100dp"
            app:layout_constraintTop_toBottomOf="@+id/socketTimeoutLabelView"/>
    <Button
            android:text="@string/save_config_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/saveView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/socketTimeoutView"
            android:width="200dp" android:height="50dp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/saveTopGuideView"
                                                app:layout_constraintGuide_begin="75dp"
                                                android:orientation="horizontal"/>
    <Button
            android:text="@string/delete_logs_btn_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/deleteLogsBtn"
            app:layout_constraintTop_toBottomOf="@+id/saveView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="50dp" android:width="200dp"
            android:height="50dp"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/enableLogSavingCheck"
            android:text="@string/enable_log_saving_label"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/deleteLogsBtn"/>
</androidx.constraintlayout.widget.ConstraintLayout>